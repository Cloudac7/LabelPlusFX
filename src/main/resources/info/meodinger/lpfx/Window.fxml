<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import info.meodinger.lpfx.component.*?>

<BorderPane
        xmlns="http://javafx.com/javafx/11.0.2"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="info.meodinger.lpfx.Controller"
        fx:id="root"
>
    <top>
        <CMenuBar fx:id="cMenuBar" />
    </top>
    <center>
        <SplitPane fx:id="pMain" dividerPositions="0.63">
            <BorderPane>
                <top>
                    <HBox fx:id="hbGroupBar" alignment="CENTER_LEFT">
                    </HBox>
                </top>
                <center>
                    <CLabelPane fx:id="cLabelPane" initScale="1.0" scale="1.0" minScale="0.2" maxScale="2.0"/>
                </center>
                <bottom>
                    <HBox alignment="CENTER_RIGHT">
                        <CTextSlider fx:id="cSlider" initScale="1.0" scale="1.0" minScale="0.2" maxScale="2.0"/>
                        <HBox alignment="CENTER" HBox.hgrow="ALWAYS"/>
                        <CComboBox fx:id="cPicBox"/>
                    </HBox>
                </bottom>
            </BorderPane>
            <SplitPane fx:id="pRight" dividerPositions="0.6" orientation="VERTICAL">
                <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <top>
                        <HBox alignment="CENTER_RIGHT">
                            <Button fx:id="bSwitchWorkMode" mnemonicParsing="false" onAction="#switchWorkMode"/>
                            <CComboBox fx:id="cGroupBox" />
                            <HBox alignment="CENTER" HBox.hgrow="ALWAYS"/>
                            <Button fx:id="bSwitchViewMode" mnemonicParsing="false" onAction="#switchViewMode"/>
                        </HBox>
                    </top>
                    <center>
                        <CTreeView fx:id="cTreeView"/>
                    </center>
                </BorderPane>
                <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <center>
                        <CTransArea fx:id="cTransArea"/>
                    </center>
                    <bottom>
                        <CInfo fx:id="cInfo"/>
                    </bottom>
                </BorderPane>
            </SplitPane>
        </SplitPane>
    </center>
</BorderPane>
