<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import ink.meodinger.lpfx.component.*?>
<?import ink.meodinger.lpfx.component.common.*?>

<BorderPane
        xmlns="http://javafx.com/javafx/11.0.2"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="ink.meodinger.lpfx.Controller"
        fx:id="root"
>
    <center>
        <SplitPane fx:id="pMain" dividerPositions="0.618">
            <BorderPane>
                <top>
                    <CGroupBar fx:id="cGroupBar"/>
                </top>
                <center>
                    <CLabelPane fx:id="cLabelPane" initScale="1.0" scale="1.0" minScale="0.2" maxScale="2.0"/>
                </center>
                <bottom>
                    <HBox alignment="CENTER_RIGHT">
                        <CTextSlider fx:id="cSlider" initScale="1.0" scale="1.0" minScale="0.2" maxScale="2.0"/>
                        <HBox alignment="CENTER" HBox.hgrow="ALWAYS"/>
                        <CComboBox fx:id="cPicBox" wrapped="true"/>
                    </HBox>
                </bottom>
            </BorderPane>
            <SplitPane fx:id="pRight" dividerPositions="0.618" orientation="VERTICAL">
                <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <top>
                        <HBox alignment="CENTER_RIGHT">
                            <Button fx:id="bSwitchWorkMode" mnemonicParsing="false" onAction="#switchWorkMode"/>
                            <CComboBox fx:id="cGroupBox" />
                            <HBox alignment="CENTER" HBox.hgrow="ALWAYS"/>
                            <Button fx:id="bSwitchViewMode" mnemonicParsing="false" onAction="#switchViewMode"/>
                        </HBox>
                    </top>
                    <center>
                        <CTreeView fx:id="cTreeView"/>
                    </center>
                </BorderPane>
                <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <center>
                        <CLigatureArea fx:id="cTransArea" wrapText="true"/>
                    </center>
                    <bottom>
                        <Label fx:id="lInfo">
                            <padding>
                                <Insets left="8.0" right="8.0" top="4.0" bottom="4.0"/>
                            </padding>
                        </Label>
                    </bottom>
                </BorderPane>
            </SplitPane>
        </SplitPane>
    </center>
</BorderPane>
